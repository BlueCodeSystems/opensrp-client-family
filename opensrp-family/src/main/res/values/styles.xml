<resources>

    <!-- Base application theme. -->
    <style name="FamilyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FamilyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FamilyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FamilyTheme.DarkAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowContentOverlay">@null</item>
        <!--below line used to change the color of home(back) button color-->
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="FamilyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
